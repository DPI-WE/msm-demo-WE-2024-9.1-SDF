<div class="container">

  <div class="d-flex justify-content-between align-items-center">
    <h1>Directors</h1>
    <%= link_to "New director", new_director_path %>
  </div>

  <div id="directors">
    <div class="row">
      <% @directors.each do |director| %>
        <div class="col-12 col-md-4 col-xxl-3 my-2">
          <%= render "directors/card", director: director %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="my-2 d-flex justify-content-center">
    <%= paginate @directors %>
  </div>
</div>
