<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= movie.year %>
  </p>

  <% if movie.poster.attached? %>
    <%= image_tag(movie.poster, class: "img-thumbnail") %>
  <% end %>

  <p>
    <strong>Director:</strong>
    <%= link_to movie.director.name, director_path(movie.director) %>
  </p>

  <% if movie.submitter.present? %>
    <p>
      <strong>Submitted By:</strong>
      <%= movie.submitter.username %>
    </p>
  <% end %>

</div>
